<?xml version="1.0" encoding="UTF-8"?>
<forms>
    <request>
        <elements>
            <email>
                <type>text</type>
                <options>
                    <label>Email</label>
                    <required>true</required>
                    <validators>
                        <email>
                            <validator>EmailAddress</validator>
                        </email>
                    </validators>
                </options>
            </email>
            <submit>
                <type>submit</type>
                <options>
                    <label>Enviar</label>
                </options>
            </submit>
        </elements>
    </request>
    <reset>
        <elements>
            <newpassword>
                <type>password</type>
                <options>
                    <label>Nova Senha</label>
                    <required>true</required>
                </options>
            </newpassword>
            <confirmation>
                <type>password</type>
                <options>
                    <label>Confirmação de Senha</label>
                    <required>true</required>
                </options>
            </confirmation>
            <submit>
                <type>submit</type>
                <options>
                    <label>Enviar</label>
                </options>
            </submit>
        </elements>
    </reset>
</forms>